{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"]
    },
    "noEmit": true
  },
  "compileOnSave": true,
  "include": ["./packages/core/**/*", "packages/types/index.ts"]
}
